<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.schalarm_android_app"
          android:versionCode="1"
          android:versionName="1.0">
    <uses-sdk android:minSdkVersion="14"
              android:targetSdkVersion="14"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application android:label="@string/app_name" android:name=".utils.InjectorApplication">
        <activity android:name=".activities.StartActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"
                        />
            </intent-filter>
        </activity>
        <activity android:name=".activities.ScheduleCreateActivity"
                  android:screenOrientation="landscape"
                  android:theme="@android:style/Theme.NoTitleBar">
        </activity>
        <activity android:name=".activities.SelectTrackActivity"
                  android:screenOrientation="landscape"
                  android:theme="@android:style/Theme.NoTitleBar">
        </activity>
        <activity android:name=".activities.QueryShowerActivity"
                  android:screenOrientation="landscape"
                  android:theme="@android:style/Theme.NoTitleBar">
        </activity>
    </application>
</manifest>

<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.schalarm_android_app"
          android:versionCode="1"
          android:versionName="1.0">
    <uses-sdk android:minSdkVersion="14"
              android:targetSdkVersion="14"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application android:label="@string/app_name" android:name="application.utils.InjectorApplication">
        <activity android:name="application.activities.StartActivity"
                  android:screenOrientation="portrait"
                  android:theme="@android:style/Theme.Holo.Light"
                  android:icon="@drawable/icon">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="application.activities.ScheduleCreateActivity"
                  android:screenOrientation="portrait"
                  android:theme="@android:style/Theme.Holo.Light">
        </activity>
        <activity android:name="application.activities.SelectTrackActivity"
                  android:screenOrientation="portrait"
                  android:theme="@android:style/Theme.Holo.Light">
        </activity>
        <activity android:name="application.activities.QueryShowerActivity"
                  android:screenOrientation="portrait"
                  android:theme="@android:style/Theme.Holo.Light">
        </activity>
        <activity android:name="application.activities.elements.TagsSelectorActivity"
                  android:theme="@android:style/Theme.Holo.Light"
                  android:screenOrientation="portrait">
        </activity>
    </application>
</manifest>
